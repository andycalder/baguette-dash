<!DOCTYPE html>
<html>

<head>
  <title>BaguetteDash</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%# add style sheet %>
  <%= stylesheet_pack_tag 'application' %>

  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

</head>

<body style="background-color: #ffffff;" class="m-0 p-0">
  <div class="container-fluid">
    <nav class="navbar">
      <div>
        <%= link_to meals_path do %>
        <%= image_tag "baguette-dash.png", class: "logo" %>
        <% end %>
        <%= link_to "Dashboard", dashboard_path, class: 'dashboard-navbar' %>
      </div>
      <div>
        <% if current_user %>
        <%= link_to "Sign Out", destroy_user_session_path, class: 'sign-navbar', method: :delete %>
        <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "p-2 fw-bold text-dark sign-navbar" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "fw-bold text-dark sign-navbar" %>
        <% end %>
      </div>
    </nav>
  </div>
  <%= yield %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
  </script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous">
  </script>
</body>

<footer class="container-fluid">
  <%= link_to meals_path do %>
    <%= image_tag "france.png", class: "logo-footer" %>
  <% end %>
  <ul class="m-0 p-0">
    <li><a href="#" target="_blank"><i class="fab fa-instagram social-media-footer"></i></a></li>
    <li><a href="#" target="_blank"><i class="fab fa-twitter social-media-footer"></i></a></li>
    <li><a href="#" target="_blank"><i class="fab fa-linkedin-in social-media-footer"></i></a></li>
  </ul>
  <p>Â© Baguette Dash</p>
</footer>

<%= render 'devise/shared/flashes' %>

</html>