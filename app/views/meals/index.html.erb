
<div class="container mt-2">
  <div class="row">
    <div class="col-12 col-md-6">
      <%= form_tag meals_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a meal"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      <%@results.each do |result|  %>
      <div class="cards">
        <div class="card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= result.photo.attached? ? cl_image_path(result.photo.key) : image_path('baguettes') %>)">
          <%= link_to result.name, meal_path(result), class: "card-category" %>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%# Using the map%>
      <div id="map" class="my-4" style="width: 100%; height: 300px;" data-markers="<%= @markers.to_json %>"
        <%# Javascript expected an array%> data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
