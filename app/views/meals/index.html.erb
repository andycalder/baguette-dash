<div class="container-fluid mt-2">
  <div class="row">
    <div class="col-12 col-md-6">
      <%@meals.each do |meal|  %>
      <div class="cards" data-meal-id="<%=meal.id%>" id="display_food">
        <div class="card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= meal.photo.attached? ? cl_image_path(meal.photo.key) : image_path('baguettes') %>)">
          <%= link_to meal.name, meal_path(meal), class: "card-category" %>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <%# Using the map%>
      <div id="map" class="my-4" 
      data-markers="<%= @markers.to_json %>"<%# Javascript expected an array%> 
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
